{
  "manifest_version": 3,
  "name": "CC-Helper (Pure API Sync)",
  "description": "CC-Helper with realtime sync using Supabase REST + WebSocket directly",
  "version": "2.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://iyvbhidqylxrmrqzivok.supabase.co/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}